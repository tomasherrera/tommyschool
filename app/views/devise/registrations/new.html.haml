.authform
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3 Registro
    = devise_error_messages!
    .form-group
      = f.label :name, "Nombre y Apellido"
      = f.text_field :name, :autofocus => true, class: 'form-control'
    .form-group
      = f.label :id_document, "Documento de Identidad (Sólo números)"
      = f.text_field :id_document, class: 'form-control'
    .form-group
      = f.label :email, "Correo electrónico"
      = f.email_field :email, class: 'form-control'
    .form-group
      = f.label :password, "Contraseña"
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation, "Confirma la contraseña"
      = f.password_field :password_confirmation, class: 'form-control'
    = f.submit 'Registrate', :class => 'button right'
